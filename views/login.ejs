<body class="login">

	
	<div id="form" class='form animated flipInX'>
	  <h2>Login To Meeting Analytics</h2>
	  <form action="/validated" method="post">
	    <input id="userName" placeholder='Username' name="user" type='text'>
	    <input id="password" placeholder='Password' name="pass" type='password'>
	    <button id="submit" class='animated infinite pulse' type="submit">Login</button>
	  </form>
	</div>
	

	<script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
	<script >
		$(document).ready(function() {

			sessionStorage.removeItem("valid");

			$('#submit').click(function(e){

				e.preventDefault();

				var u = $('#userName').val();
				var p = $('#password').val();

				if(u === 'tcs' && p === '3cnHv8J!'){

					
					$('#form').addClass('animated zoomOut');
					setTimeout(function(){
						sessionStorage.setItem("valid", "true");
						
						window.location.href = '/validated';

					},1000);
					

				}
				else{

					$('#form').removeClass('animated flipInX');
					

					$('#form').toggleClass('animated shake');
					setTimeout(function(){

						$('#form').removeClass('animated shake');

					},1000);
				}
			});


		});




	</script>
</body>

